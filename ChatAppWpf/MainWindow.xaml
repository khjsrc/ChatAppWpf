<Window x:Class="ChatAppWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppWpf"
        mc:Ignorable="d"
        Title="Chat App" Height="350" Width="525" Background="#ff303030" MinWidth="525" MinHeight="350">
    <Grid MinHeight="300" MinWidth="500">
        <TextBlock Name="TextBlockChat" Margin="10,10,10,40" Background="#484848" Foreground="AntiqueWhite" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
        <Button Name="ButtonSendMessage" Height="20" Width="90" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,11" Foreground="Bisque" Background="Black" ClickMode="Release" Content="Send" FontFamily="Comic Sans MS"/>
        <TextBox Name="TextBoxMessage" Height="22" Margin="10,0,110,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Foreground="AntiqueWhite" Background="#484848"></TextBox>
    </Grid>
</Window>
