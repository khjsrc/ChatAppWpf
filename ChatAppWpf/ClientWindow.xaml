                <GradientStop Offset="0.6" Color="Red" />
                <GradientStop Offset="1.0" Color="Yellow" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>-->
    <Grid MinHeight="300" MinWidth="500">
        <ScrollViewer x:Name="ChatLog" Margin="10,10,10,45" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Foreground="Bisque" FontFamily="Papyrus" FontSize="14" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"></ScrollViewer>
        <Button Style="{StaticResource ButtonDefaultStyle}" Name="ButtonSendMessage" Height="22" Width="90" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" ClickMode="Release" Content="Send" Click="ButtonSendMessage_Click"></Button>
            <TextBox Name="TextBoxMessage" Height="22" Margin="10,0,110,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Foreground="Bisque" BorderThickness="0" Background="#484848" Text="Input your message here..." GotFocus="TextBoxMessage_GotFocus" KeyDown="TextBoxMessage_KeyDown" LostFocus="TextBoxMessage_LostFocus"></TextBox>
    </Grid>
</Window>
